                <input asp-for="Descriptions" class="form-control" />
                <span asp-validation-for="Descriptions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturingYear" class="control-label"></label>
                <input asp-for="ManufacturingYear" class="form-control" />
                <span asp-validation-for="ManufacturingYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineCondition" class="control-label"></label>
                <input asp-for="EngineCondition" class="form-control" />
