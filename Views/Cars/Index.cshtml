@model IEnumerable<CaMS.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturingYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentPaint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRepairs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfAccident)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturingYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentPaint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRepairs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfAccident)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
